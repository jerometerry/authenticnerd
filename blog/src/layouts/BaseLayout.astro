---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import AwsRum from "@components/AwsRum.astro";
import "@styles/global.css";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  pageTitle,
  description = "Authentic Nerd - A collection of thoughts on technology, authenticity, and systems thinking.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />

    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <AwsRum />
  </head>

  <body
    class="bg-gray-light text-navy dark:bg-navy mx-auto w-full max-w-[80ch] p-4 font-sans leading-normal dark:text-white"
  >
    <Header />

    <main>
      <slot />
    </main>

    <Footer />

    <script>
      import "@scripts/menu.js";
    </script>
  </body>
</html>
