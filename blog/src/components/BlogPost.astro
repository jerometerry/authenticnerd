---
const { pubDate, title, url } = Astro.props;
const formattedDate = pubDate.toISOString().slice(0, 10);
---

<div
  class="flex flex-col border-b border-gray-200 p-4 md:flex-row md:items-baseline md:justify-between"
>
  <a
    href={url}
    class="text-navy hover:text-peach dark:hover:text-peach text-xl font-semibold transition-colors dark:text-white"
  >
    {title}
  </a>
  <span class="mt-1 text-sm text-gray-600 dark:text-gray-400">
    {formattedDate}
  </span>
</div>
