---
const { pubDate, title, url } = Astro.props;

const dateOptions: Intl.DateTimeFormatOptions = {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
};

const parsedDate = new Date(Date.parse(pubDate));
const formattedDate = parsedDate.toLocaleDateString('en-US', dateOptions);
---

<div><a href={url}>{title}</a>, {formattedDate}</div>
