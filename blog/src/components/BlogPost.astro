---
const { pubDate, title, url } = Astro.props;
const formattedDate = pubDate.toString().slice(0,10);
---

<div class="flex flex-col p-4 border-b border-gray-200 md:flex-row md:justify-between md:items-baseline">
  <a href={url} class="text-xl font-semibold text-navy hover:text-peach dark:text-white dark:hover:text-peach transition-colors">
    {title}
  </a>
  <span class="text-sm text-gray-500 mt-1">
    {formattedDate}
  </span>
</div>
