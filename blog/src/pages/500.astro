---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "500 - Internal Server Error";
const description = "Internal Server Error";

interface Props {
  error: unknown;
}

const { error } = Astro.props;
---

<BaseLayout pageTitle={pageTitle} description={description} ogType="website">
  <div class="mt-16 flex flex-col items-center px-4 text-center">
    <h1 class="text-navy mb-6 text-4xl font-bold md:text-5xl dark:text-white">
      {pageTitle}
    </h1>

    <p class="mb-8 text-lg text-gray-600 dark:text-gray-400">
      Whoops, our servers are having a bad day.
      {
        error instanceof Error && (
          <span class="mt-2 block font-mono text-sm text-red-500">
            {error.message}
          </span>
        )
      }
    </p>

    <a
      href="/"
      class="bg-navy hover:bg-peach dark:text-navy dark:hover:bg-peach inline-block rounded-lg px-6 py-3 font-semibold text-white transition-colors duration-200 dark:bg-white dark:hover:text-white"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
